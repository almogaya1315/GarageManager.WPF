<UserControl x:Class="GarageManager.UI.Views.Service.NewService"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GarageManager.UI.Views.Service"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Border Style="{StaticResource BorderStyle}"
            Height="500"
            Width="600">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top">
            <TextBlock FontSize="40"
                       Foreground="#3c5458"
                       Text="SERVICE DETAILS"
                       Margin="20"
                       TextAlignment="Center" />
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320" />
                    <ColumnDefinition Width="320" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Text="Customer Full Name"
                           Style="{StaticResource TextBlockStyle}"
                           Width="270"/>
                <TextBox Grid.Column="1"
                         Width="200"
                         HorizontalAlignment="Left"
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding Customer.FullName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Car Type"
                           Grid.Row="1"
                           Style="{StaticResource TextBlockStyle}" />
                <ComboBox Grid.Column="1"
                          Grid.Row="1"
                          SelectedItem="{Binding Car.Type}"
                          ItemsSource="{Binding CarTypes}"
                          FontSize="18"
                          DisplayMemberPath="Name"
                          Width="200"
                          Margin="10,0"
                          Height="32"
                          HorizontalAlignment="Left">
                    <ComboBox.Effect>
                        <DropShadowEffect ShadowDepth="3"
                                          BlurRadius="3"
                                          Color="#a6d6df" />
                    </ComboBox.Effect>
                </ComboBox>


            </Grid>
        </StackPanel>
    </Border>
</UserControl>
